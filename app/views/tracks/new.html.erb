<h1>Create track!</h1>

<form action="<%= tracks_url %>" method="POST" id="track_form">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">
  
  <label for="track_title">Title</label>
  <input
    type="text"
    name="track[title]"
    id="track_title"
    value="<%= @track.title %>">
  <br>


  <label for="track_album">Band</label>
  <select name="track[album_id]" id="track_album">
    <option disabled selected>-- select an album --</option>
    <% Album.all.each do |album| %>
      <option
        <%= album.id == @album_id.to_i ? "selected" : "" %>
        value="<%= album.id %>">
        <%= album.title %>
      </option>
    <% end %>
  </select>

<br>

  <input
    type="radio"
    name="track[regular_or_bonus]"
    value="regular"
    id="track_regular"
    <%= @track.regular_or_bonus == "regular" ? "checked" : "" %>>
  <label for="track_regular">Regular</label>
  
  <input
    type="radio"
    name="track[regular_or_bonus]"
    value="bonus"
    id="track_bonus"
    <%= @track.regular_or_bonus == "bonus" ? "checked" : "" %>>
  <label for="track_bonus">Bonus</label>

  <br>

<label for="track_ord">Ord</label>
  <input
    type="string"
    name="track[ord]"
    id="track_ord"
    value="<%= @track.ord %>">
  <br>

<label for="track_lyrics">lyrics</label> 
<br>
<textarea name="track[lyrics]" form="track_form" id="track_lyrics" > <%= @track.lyrics %> </textarea> <br>

<input type="submit" value="Create track!">
</form>
